{
  "root": true,
  "env": {
      "browser": true,
      "commonjs": true,
      "es2020": true,
      "node": true,
      "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": { "ecmaVersion": 11 },
  "rules": {
    "max-params": ["error", 5],
    "max-lines": ["error", 250],
    "sonarjs/cognitive-complexity": 5,
    "max-lines-per-function": ["error", 25],
    "max-depth": ["error", 4],
    "sonarjs/no-identical-functions": 2,
    "no-console": "off",
    "no-alert": "off",
    "arrow-parens": [2, "always"],
    "jsx-a11y/label-has-associated-control": 0,
    "quotes": [2, "single"],
    "implicit-arrow-linebreak": "off",
    "consistent-return": "off",
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "ignoreRestSiblings": true
      }
    ],
    "object-curly-newline": "off"
  },
  "globals": {
      "db": "writable"
  }
}
